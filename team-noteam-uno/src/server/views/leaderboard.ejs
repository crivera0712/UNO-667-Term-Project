<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            background: linear-gradient(135deg, #1a1a1a, #2d2d2d);
            color: white;
        }

        .leaderboard-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 3rem;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            text-align: center;
            max-width: 800px;
            width: 100%;
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .leaderboard-container h1 {
            font-size: 2.5em;
            margin-bottom: 30px;
            text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .leaderboard-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
            overflow: hidden;
        }

        .leaderboard-table th,
        .leaderboard-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .leaderboard-table th {
            background: rgba(255, 255, 255, 0.1);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .leaderboard-table tr:hover {
            background: rgba(255, 255, 255, 0.1);
            transition: background 0.3s ease;
        }

        .rank {
            font-weight: 600;
            font-size: 1.2em;
        }

        .rank-1 {
            color: #FFD700;
        }

        .rank-2 {
            color: #C0C0C0;
        }

        .rank-3 {
            color: #CD7F32;
        }

        .back-button {
            position: absolute;
            top: 20px;
            left: 20px;
            padding: 12px 24px;
            background: rgba(255, 255, 255, 0.1);
            color: white;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            backdrop-filter: blur(5px);
        }

        .back-button:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateX(-3px);
        }

        .stats {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            margin: 0 5px;
            background: rgba(255, 255, 255, 0.1);
        }

        .uno-cards-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: -1;
            opacity: 0.1;
            background:
                repeating-linear-gradient(
                    45deg,
                    transparent 0,
                    transparent 40px,
                    rgba(255, 0, 0, 0.1) 40px,
                    rgba(255, 0, 0, 0.1) 80px
                );
        }
    </style>
</head>
<body>
    <div class="uno-cards-bg"></div>
    <a href="/" class="back-button">‚Üê Back to Menu</a>
    <div class="leaderboard-container">
        <h1>üèÜ <%= title %></h1>
        <div class="leaderboard-content">
            <table class="leaderboard-table">
                <thead>
                    <tr>
                        <th>Rank</th>
                        <th>Player</th>
                        <th>Wins</th>
                        <th>Games Played</th>
                        <th>Win Rate</th>
                    </tr>
                </thead>
                <tbody>
                    <% const mockPlayers = [
                        { name: "Champion123", wins: 150, gamesPlayed: 200 },
                        { name: "UnoMaster", wins: 130, gamesPlayed: 180 },
                        { name: "CardKing", wins: 120, gamesPlayed: 170 },
                        { name: "ProPlayer", wins: 100, gamesPlayed: 150 },
                        { name: "GameWizard", wins: 90, gamesPlayed: 140 }
                    ] %>

                    <% mockPlayers.forEach((player, index) => { %>
                        <tr>
                            <td class="rank rank-<%= index + 1 %>">#<%= index + 1 %></td>
                            <td><%= player.name %></td>
                            <td><span class="stats"><%= player.wins %></span></td>
                            <td><span class="stats"><%= player.gamesPlayed %></span></td>
                            <td><span class="stats"><%= Math.round((player.wins / player.gamesPlayed) * 100) %>%</span></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
